@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add @Html.DisplayFor(model => model.Name) to a machine</h2>


@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  @Html.Label("Choose machine:")
  @Html.DropDownList("MachineId")
  <br>
  <input type="submit" value="Add engineer to machine" />
}